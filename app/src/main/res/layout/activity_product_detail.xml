<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:title="Chi tiết sản phẩm"
        android:titleTextColor="@android:color/black"
        app:backgroundTint="@null" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Ảnh sản phẩm -->
            <ImageView
                android:id="@+id/ivImg"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:background="#F5F5F5"
                android:contentDescription="Ảnh sản phẩm" />

            <!-- Tên sản phẩm -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Adidas Samba OG sneakers"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Giá sản phẩm -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="2.600.000 ₫"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Mô tả -->
            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Giày Adidas Samba cổ điển với thiết kế tối giản, phối màu nhã nhặn, phù hợp để đi chơi và tập luyện nhẹ"
                android:textColor="#666666"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />

            <!-- Chọn size -->
            <TextView
                android:id="@+id/tvSizeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Chọn size:"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spSize"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/spinner_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />

            <!-- Chọn số lượng -->
            <TextView
                android:id="@+id/tvQuantityLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Số lượng:"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/quantity_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:id="@+id/btnMinus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/button_circle"
                    android:text="-"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tvQty"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="12dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnPlus"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/button_circle"
                    android:text="+"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvSelectedSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Chưa chọn size"
                android:textColor="#666666"
                android:textSize="14sp"
                android:visibility="gone" />

            <!-- Nút hành động -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <ImageButton
                    android:id="@+id/btnAddToCart"
                    android:layout_width="148dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_cart"
                    android:background="@drawable/button_outline"
                    android:contentDescription="Thêm vào giỏ hàng"
                    app:tint="#000000"
                    android:padding="12dp" />

                <ImageButton
                    android:id="@+id/btnFavorites"
                    android:layout_width="148dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/button_blue"
                    android:contentDescription="Yêu thích"
                    android:padding="12dp"
                    android:src="@drawable/ic_favorite"
                    app:tint="@android:color/white" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
