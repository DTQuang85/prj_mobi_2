<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="24dp">

    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Tiêu đề -->

            <!-- QR Code -->

            <!-- Số tiền -->

            <!-- Hướng dẫn -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Quét mã để thanh toán"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivQr"
                android:layout_width="280dp"
                android:layout_height="189dp"
                android:layout_marginBottom="20dp"
                android:background="#F5F5F5"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="2.890.000 ₫"
                android:textColor="#2E7D32"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:lineSpacingExtra="6dp"
                android:text="Vui lòng ghi rõ nội dung chuyển khoản: họ tên + số điện thoại.\nSau khi chuyển, bấm Hoàn tất."
                android:textColor="#666666"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnDone"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_blue"
                android:text="Hoàn tất"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPayVnpay"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Thanh toán VNPay"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_blue"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="#666666"
                android:textSize="14sp"
                android:gravity="center"/>


        </LinearLayout>

    </ScrollView>

    <!-- Nút Hoàn tất - Luôn ở dưới cùng -->

</LinearLayout>